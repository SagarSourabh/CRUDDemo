@model CRUDDemo.Models.EmployeeModel

@{
    ViewData["Title"] = "Edit";
}
<br />
<div class="card border-primary mb-12">
    <div class="card-header text-white bg-info">Edit Employee</div>
    <div class="card-body">
        <div class="row">
            <div class="col-md-6">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="EmployeeID" />
                    <div class="form-group">
                        <label asp-for="EmployeeName" class="control-label"></label>
                        <input asp-for="EmployeeName" class="form-control" />
                        <span asp-validation-for="EmployeeName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="EmployeeEmail" class="control-label"></label>
                        <input asp-for="EmployeeEmail" class="form-control" />
                        <span asp-validation-for="EmployeeEmail" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="EmployeeAge" class="control-label"></label>
                        <input asp-for="EmployeeAge" class="form-control" />
                        <span asp-validation-for="EmployeeAge" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="EmployeeSalary" class="control-label"></label>
                        <input asp-for="EmployeeSalary" class="form-control" />
                        <span asp-validation-for="EmployeeSalary" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Save" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

